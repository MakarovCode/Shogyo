<div class="row">
  <div class="col-md-2">
    <%= render "account/shared/sidebar" %>
  </div>
  <div class="col-md-7 dashboard-links">
    <h2 class="green">
      Resumen
    </h2>
    <h3>
      <i class="fa fa-comments"></i> Preguntas
    </h3>
    <hr>
    <div>
      <span class="label label-default">
        <%= @questions.count %>
      </span>
      <%= link_to "Que aÃºn no respondiste", account_questions_path %>
