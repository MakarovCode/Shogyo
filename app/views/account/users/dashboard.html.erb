    <div>
      <span class="label label-default">
        <%= @purchases.count %>
      </span>
      <%= link_to "Compras sin calificar", account_purchases_path(as: "buyer", only_not_reviewd: true) %>
    </div>
    <hr>
    <div>
      <span class="label label-default">
        <%= @sells.count %>
      </span>
      <%= link_to "Ventas sin calificar", account_purchases_path(as: "seller", only_not_reviewd: true) %>
    </div>
    <hr>
  </div>
  <div class="col-md-3">
    <%= render "account/achivements/level", user: current_user, left: 4, right: 8, id: 1 %>
