<div class="row" style="margin-top: 40px;">
  <div class="col-xs-12 visible-xs">
    <h3 class="green">Consultas</h3>
  </div>
  <div class="col-xs-2 text-center">
    <h4 class="green">
      <i class="fa fa-question-circle fa-2x"></i> <br>
      <span class="hidden-xs">Consultas</span>
    </h4>
  </div>
  <div class="col-xs-10" style="border-left: 1px solid #f2f2f2;">
    <div class="row">
      <div class="col-md-12"></div>
      <% @questions.each do |question| %>
      <%= render "question_item", question: question %>
      <% end %>
    </div>
    <div class="text-right">
      <%= link_to "Ver más...", consults_questions_path(scope: "hot"), class: "btn btn-link" %>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 40px;">
  <div class="col-xs-12 visible-xs">
    <h3 class="green">Noticias Destacadas</h3>
  </div>
  <div class="col-xs-2 text-center">
    <h4 class="green">
      <i class="fa fa-newspaper-o fa-2x"></i> <br>
      <span class="hidden-xs">Noticias Destacadas</span>
    </h4>
  </div>
  <div class="col-xs-10" style="border-left: 1px solid #f2f2f2;">
    <div class="grid blog-masonry">
      <div class="grid-sizer"></div>
      <% @posts.order("RANDOM()").first(2).each do |post| %>
      <%= render "post_item", post: post %>
      <% end %>
    </div>
    <div class="text-right">
      <%= link_to "Ver más...", blog_posts_path, class: "btn btn-link" %>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 40px;">
  <div class="col-xs-12 visible-xs">
    <h3 class="green">Últimas Noticias</h3>
  </div>
  <div class="col-xs-2 text-center">
    <h4 class="green">
      <i class="fa fa-clock-o fa-2x"></i> <br>
      <span class="hidden-xs">Últimas Noticias</span>
    </h4>
  </div>
  <div class="col-xs-10" style="border-left: 1px solid #f2f2f2;">
    <div class="grid blog-masonry">
      <div class="grid-sizer"></div>
      <% @posts.order(date: :desc).first(2).each do |post| %>
      <%= render "post_item", post: post %>
      <% end %>
    </div>
    <div class="text-right">
      <%= link_to "Ver más...", blog_posts_path, class: "btn btn-link" %>
    </div>
  </div>
</div>

<% if @country_id == 1 || @country_id == 0 %>

<div class="row" style="margin-top: 40px;">
  <div class="col-xs-12 visible-xs">
    <h3 class="green">Publicaciones Destacadas</h3>
  </div>
  <div class="col-xs-2 text-center">
    <h4 class="green">
      <i class="fa fa-star-o fa-2x"></i> <br>
      <span class="hidden-xs">Publicaciones Destacadas</span>
    </h4>
  </div>
  <div class="col-xs-10" style="border-left: 1px solid #f2f2f2;">
    <%= render "market/publications/index/carusel_line", size: "col-md-3 col-sm-4 col-xs-6", publications: @features, id: "features" %>
  </div>
  <div class="text-right">
    <%= link_to "Ver más...", market_publications_path, class: "btn btn-link" %>
  </div>
  <div class="col-md-12">
    <hr>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 visible-xs">
    <h3 class="green">Últimas Publicaciones</h3>
  </div>
  <div class="col-xs-2 text-center">
    <h4 class="green">
      <i class="fa fa-clock-o fa-2x"></i> <br>
      <span class="hidden-xs">Últimas Publicaciones</span>
    </h4>
  </div>
  <div class="col-xs-10" style="border-left: 1px solid #f2f2f2;">
    <%= render "market/publications/index/carusel_line", size: "col-md-3 col-sm-4 col-xs-6", publications: @last_publications, id: "last_publications" %>
  </div>
  <div class="text-right">
    <%= link_to "Ver más...", market_publications_path, class: "btn btn-link" %>
  </div>
  <div class="col-md-12">
    <hr>
  </div>
</div>
<% end %>
