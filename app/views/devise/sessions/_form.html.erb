<div class="header" style="text-align:center;">
  <%= link_to root_path do %>
    <%= image_tag @info.logo.url, class: "logo img-responsive", alt: "AgroNeto" %>
  <% end %>
  <h3 class="">
    Inicia sesi칩n con tu cuenta
  </h3>
  <%= render "devise/shared/main_links", controller_name: "sessions", resource_name: resource_name, resource_class: User %>
</div>
<div class="table-wrap">
  <div class="table-cell">
    <div class="auth-box">
      <div class="">
        <div class="left">
          <div class="auth-social">
            <%= render "devise/shared/social_links", controller_name: "sessions", resource_name: resource_name, resource_class: User %>
          </div>
        </div>
        <span class="center-separator">O</span>
        <div class="right">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-auth-small") do |f| %>
            <h3 class="">Ingresar</h3>
            <div class="form-group">
              <label for="signup-email" class="control-label sr-only">Email</label>
              <%= f.email_field :email, autofocus: true, class: "form-control", id: "signup-email", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <label for="signup-password" class="control-label sr-only">Contrase침a</label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "signup-password", placeholder: "Contrase침a" %>
            </div>
            <div class="form-group clearfix">
              <label class="fancy-checkbox element-left">
                <%= f.check_box :remember_me %>
                <span>Recordarme</span>
              </label>
              <%= render "devise/shared/secondary_links", controller_name: "sessions", resource_name: resource_name, resource_class: User %>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block">Iniciar sesi칩n</button>
              <p class="margin-top-30 text-center">
                <%= render "devise/shared/main_links", controller_name: "sessions", resource_name: resource_name, resource_class: User %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
