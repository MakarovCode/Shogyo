<div class="container visible-sm visible-xs" id="download-apps" style="width: 100%; position: fixed; bottom: 0; left: 0; background-color: rgba(0,0,0,0.75); z-index: 20000;">
  <div class="row ">
    <div class="col-xs-12 text-center" style="margin-bottom: -10px;">
      <p style="color: white; font-weight: bold; font-size: 10px;">
        ¡Para una mejor experiencia descarga nuestra versión móvil!
      </p>
    </div>
    <div class="col-xs-6">
      <a href='https://play.google.com/store/apps/details?id=co.devpenguin.agronetoapp&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1' style="width: 100%;" target="_blank">
        <img alt='Disponible en Google Play' src='https://play.google.com/intl/en_us/badges/images/generic/es_badge_web_generic.png' style="width: 100%;"/></a>
      </div>
      <div class="col-xs-6" style="padding-top: 2.5%; padding-left: 25px; padding-right: 25px;">
        <a href="https://itunes.apple.com/us/app/agroneto/id1355955630?mt=8" style="width: 100%;" target="_blank">
          <img alt='Disponible en Apple Store' src='https://linkmaker.itunes.apple.com/assets/shared/badges/en-us/appstore-lrg.svg' style="width: 100%;"/></a>
        </a>
      </div>
      <div class="col-xs-12 text-center" style="margin-top: -10px;">
        <button class="btn btn-xs btn-link btn-block" onclick="$('#download-apps').removeClass('visible-sm visible-xs').hide(200);" style="color: white; font-weight: bold;">
          Cerrar (<span id="banner-counter">5s</span>)
        </button>
      </div>
    </div>
  </div>

  <script>
    var banner_counter = 15;

    var interval = setInterval(function(){
      banner_counter --;
      $("#banner-counter").text(banner_counter + "s");
      if (banner_counter <= 0){
        clearInterval(interval);
        if ($(window).width() <= 992){
          $("#download-apps").removeClass('visible-sm visible-xs').hide();
          $("#carousel-ads").css({
            position: "fixed",
            bottom: "0px",
            left: "0px",
            "z-index": "9999"
          });
        }
      }
    }, 1000);

  </script>
